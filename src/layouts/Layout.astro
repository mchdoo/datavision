---
import MovingCircles from '@/components/MovingCircles';
import Navbar from '../components/Navbar';
import { Footer } from '@/components/Footer';

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	

		<body class="relative">
			<nav class="fixed top-0 bg-white text-black p-2 w-screen left-0">Sitio en construcci√≥n</nav>
			<MovingCircles client:load />
			<header class="h-[--nav-height] p-4 relative w-full ">

				<Navbar client:idle/>
			</header>
			<main class="min-h-screen overflow-x-hidden -z-50 max-w-screen-xl px-6 lg:p-0 mb-[--nav-height] flex flex-col mx-auto mt-[6]">
				<slot />
			</main>
			<Footer/>
		</body>
</html>

<style is:global>

	@tailwind base;

	*, html {
			scroll-behavior: smooth !important;
			scroll-margin: var(--nav-height);

		}

	:root {

		@font-face {
			font-family: 'Rubik', sans-serif;
			src: url('/fonts/Rubik_variable.ttf') format('ttf');
			font-weight: 200 900;
			font-style: normal;
		}

		--primary: 158 70 35;
		--bg: 255 236 221;
		--fg: 35 33 33;
		--fg-muted: 35, 33, 33, 0.5;

		--nav-height: 6rem;

		
	}

	@layer base {
		body {
			@apply bg-bg text-fg;
			font-family: 'Rubik', sans-serif !important;
		}

	}
</style>